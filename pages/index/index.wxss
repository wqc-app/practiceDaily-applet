.banner {
  margin: 20rpx 0;
}

.banner swiper {
  height: 400rpx;
}

.banner swiper image {
  display: block;
  height: 100%;
  width: 700rpx;
  margin: 0 auto;
  border-radius: 20rpx;
}

.scrollNav {
  padding: 0 20rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  margin: 20rpx;
}

.scrollNav scroll-view .item .pic {
  width: 160rpx;
  height: 160rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .name {
  text-align: center;
  color: var(--fontColor);
}

.scrollNav scroll-view .item:first-of-type {
  margin-left: 0;
}

.scrollNav scroll-view .item:last-of-type {
  margin-right: 0;
}

.about {
  padding: 40rpx 20rpx;
}

.about .publicTitle {
  text-align: center;
}

.about .publicTitle .en {
  font-size: 80rpx;
  color: rgba(0, 0, 0, 0.3);
}

.about .publicTitle .cn {
  font-size: 48rpx;
  font-weight: 1000;
  transform: translateY(-48rpx);
}

.about .publicTitle .line {
  width: 100rpx;
  height: 4rpx;
  background: gray;
  border-radius: 4rpx;
  margin: 0 auto;
  transform: translateY(-16rpx);
}

.about .content {
  margin: 30rpx 0;
}

.about .content .row {
  text-indent: 1.6em;
  line-height: 1.6em;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.about .content .row:first-of-type {
  padding-top: 0;
}

.about .content .row:last-of-type {
  border-bottom: none;
  padding-bottom: 0;
}
